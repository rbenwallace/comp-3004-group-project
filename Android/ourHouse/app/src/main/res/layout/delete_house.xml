<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background= "@drawable/layout_bg"
    android:padding="23dp"
    >
    <TextView
        android:id="@+id/deleteTextHouse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="50sp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"
        android:text="Warning"
        android:layout_marginStart="5dp"
        />
    <TextView
        android:id="@+id/warningdh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_below="@+id/deleteTextHouse"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"
        android:text="Once house deleted, you will be removed from the house"
        android:layout_marginStart="5dp"
        />
    <Button
        android:id="@+id/deleteConfirmHouse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/warningdh"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_selector"
        android:text="@string/delete_house"
        android:textColor="@color/red"
        android:textSize="35sp"/>
    <Button
        android:id="@+id/deleteCancelHouse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/deleteConfirmHouse"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_selector"
        android:text="@string/cancel"
        android:textColor="@color/colorPrimary"
        android:textSize="35sp"/>

</RelativeLayout>